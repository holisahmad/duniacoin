<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>
$(function(){

$(".claim").click (function(event){
event.preventDefault();
clicked_btn = $(this);
clicked_btn.prop("disabled", 1).text("Proccess");
user = "<?php echo $user_session ?>";
reward_id = $(this).data("reward_id");
useleft = $(this).data("useleft");
useright = $(this).data("useright");
current_omset = $(this).data("current_omset");

var return_data;
$.post ("claimreward.php", {current_omset: current_omset, user: user, reward_id: reward_id, useleft: useleft, useright:useright}, function(data){
return_data = $.parseJSON (data);
}).done(function(){
if (return_data){
alert ("Claim Success! please contact our customer service for confirm your reward!");
}

clicked_btn.prop("disabled", 0).text("CLAIMED");
window.location.reload();
});
});

});
</script>
